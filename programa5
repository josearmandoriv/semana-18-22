#include <stdio.h>  

void imprime(int); 
int main()          
{
int n=0;            
printf("Indica el numero limite   ");   
scanf("%d", &n);   
imprime(n);        
return 0;           
}          
void imprime(int n) 
{
	 int i,j,k,s;
     for(i=1;i<=n-1;i++){
     for(k=1;k<i+1;k++)
     printf(" ");
     for(j=n;j>=i;j--)
     printf("%d",j);
     printf("\n");
 }
}
