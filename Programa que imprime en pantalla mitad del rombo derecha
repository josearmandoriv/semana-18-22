#include <stdio.h>  
void imprime(int); 
void regreso(int);
int main()          
{
int n=0;            
printf("Indica el numero limite   ");   
scanf("%d", &n);    
imprime(n);        
regreso(n);
return 0;           
}                   
void imprime(int b) 
{
int a,c;            
for(a=1; a<=b; a++)
{
    for(c=1; c<=a; c++)      
        printf("%d\t", c);   
 printf("\n");               
}
}
void regreso(int n)
{
	int i,j; 
	
	for(i=n-1; i>=0; i--)
	{
		for (j=0; j<i; j++)
		{
			printf("%d\t", j+1);
		}
		printf("\n");
	}
}
